<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:minWidth="200dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/counter_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/counter_button" />

        <Button
            android:id="@+id/profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/profile_button" />

        <Button
            android:id="@+id/dialogs_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dialogs_button" />

        <Button
            android:id="@+id/movies_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/movies_button" />

        <Button
            android:id="@+id/clock_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/clock_button" />
    </LinearLayout>

</FrameLayout>